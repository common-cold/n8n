generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid(7)) @db.Uuid
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  workflows Workflow[]
  credentials Credential[]
}

model Workflow {
  id          String   @id @default(uuid(7)) @db.Uuid
  name        String
  nodes       Json
  connections Json
  userId      String   @db.Uuid
  createdAt   DateTime
  updatedAt   DateTime
  user        User     @relation(fields: [userId], references: [id])
}

model NodeType {
  id              String   @id @default(uuid(7)) @db.Uuid
  name            String
  description     String
  url             String
}

model TriggerType {
  id              String   @id @default(uuid(7)) @db.Uuid
  name            String
  description     String
  url             String
}


model Credential {
  id              String     @id @default(uuid(7)) @db.Uuid
  name            String
  data            String
  type            String
  userId          String     @db.Uuid
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @default(now())
  user            User       @relation(fields: [userId], references: [id])
}
